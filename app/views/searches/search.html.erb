<table class="table table-hover table-inverse">
  <% if @range == "User" %>
    <h2>Users search for "<%= params[:word] %>"</h2>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td>
            <%= image_tag user.get_profile_image, size: '50x50' %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <h2>Books search for "<%= params[:word] %>"</h2>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to(book.user) do %>
              <%= image_tag book.user.get_profile_image, size: '50x50' %>
            <% end %>
          </td>
          <td>
            <%= link_to book.title, book, class: "book_#{book.id}" %>
          </td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>